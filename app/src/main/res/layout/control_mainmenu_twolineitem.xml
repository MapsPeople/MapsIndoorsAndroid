<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:focusable="false"
	android:gravity="center_vertical"
	android:minHeight="48dp"
	>

	<FrameLayout
		android:id="@+id/ctrl_mainmenu_img_layout"
		android:layout_width="72dp"
		android:layout_height="60dp"
		android:paddingEnd="16dp"
		android:paddingStart="16dp"
		android:layout_centerVertical="true"
		>

		<ImageView
			android:id="@+id/ctrl_mainmenu_iconitem"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:scaleType="fitCenter"
			android:visibility="visible"
			tools:src="@drawable/ic_room_unknown"
			/>

		<ImageView
			android:id="@+id/ctrl_mainmenu_iconitem_tint"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:scaleType="center"
			android:tint="@color/colorPrimary"
			android:visibility="invisible"
			tools:src="@drawable/ic_human_male_female_24dp"
			/>

	</FrameLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_gravity="center"
		android:layout_toEndOf="@+id/ctrl_mainmenu_img_layout"
		android:layout_toStartOf="@+id/distanceTextView"
		android:layout_centerVertical="true"
		android:orientation="vertical">

		<TextView
			android:id="@+id/ctrl_mainmenu_textitem_main"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"
			android:textSize="13sp"
			tools:text="17A-1.10 Class room"
			/>

		<TextView
			android:id="@+id/ctrl_mainmenu_textitem_sub"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="13sp"
			tools:text="02 WindslÃ¸wparken, WP17A, 2 floor"

			/>
	</LinearLayout>
	<TextView
		android:id="@+id/distanceTextView"
		android:layout_width="wrap_content"
		android:layout_height="60dp"
		android:layout_alignParentEnd="true"
		android:paddingEnd="16dp"
		android:paddingStart="16dp"
		android:visibility="gone"
		android:gravity="center_vertical|end" />
</RelativeLayout>